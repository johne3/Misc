@model IEnumerable<ECommerce.Domain.Entities.Category>

@Html.ActionLink("Home", "List", "Product")


@foreach (var link in Model)
{
    @Html.RouteLink(link.Name,
        new
        {
            controller = "Product",
            action = "List",
            categoryName = link.Name,
            page = 1
        },
        new
        {
            @class = link == ViewBag.SelectedCategory ? "selected" : null
        })
}

